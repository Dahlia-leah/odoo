<odoo>
    <record id="view_live_scale_form" model="ir.ui.view">
        <field name="name">live.scale.form</field>
        <field name="model">live.scale</field>
        <field name="arch" type="xml">
            <form string="Live Scale">
                <sheet>
                    <group>
                        <!-- Add the live scale widget -->
                        <div class="oe_title">
                            <h2>Live Scale Data</h2>
                        </div>
                        <div id="live_scale_widget" class="o_live_scale_widget">
                            <span class="o_live_scale_weight">Fetching weight...</span> 
                            <span class="o_live_scale_unit">kg</span>
                        </div>
                    </group>
                    <footer>
                        <button string="Fetch Data" type="object" name="fetch_scale_data" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="live_scale_menu" name="Live Scale" sequence="10"/>

    <act_window id="action_live_scale" name="Live Scale"
                res_model="live.scale" view_mode="form"
                menu_id="live_scale_menu"/>
</odoo>
