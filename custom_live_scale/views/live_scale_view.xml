<odoo>
    <data>
        <!-- Define a simple view to show live scale data -->
        <record id="view_live_scale" model="ir.ui.view">
            <field name="name">live.scale.view</field>
            <field name="model">live.scale</field>
            <field name="arch" type="xml">
                <form string="Live Scale">
                    <group>
                        <field name="weight"/>
                        <field name="unit"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Define an action for the view -->
        <record id="action_live_scale" model="ir.actions.act_window">
            <field name="name">Live Scale</field>
            <field name="res_model">live.scale</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_live_scale"/>
        </record>

        <!-- Menu item to access the live scale view -->
        <menuitem id="menu_live_scale" name="Live Scale" parent="base.menu_custom" action="action_live_scale"/>
    </data>
</odoo>
