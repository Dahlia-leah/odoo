<odoo>
    <data>
        <!-- Define Label Paper Format (Portrait Orientation) -->
        <record id="paperformat_label_4_5_9_5" model="report.paperformat">
            <field name="name">Label 4.5x9.5 Portrait</field>
            <field name="format">custom</field>
            <field name="page_height">95</field> <!-- Height in mm -->
            <field name="page_width">45</field> <!-- Width in mm -->
            <field name="margin_top">1</field>
            <field name="margin_bottom">1</field>
            <field name="margin_left">1</field>
            <field name="margin_right">1</field>
        </record>

        <!-- Report Template -->
        <template id="report_stock_picking_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                     <div class="label-container">
                        <h4 class="label-title">Weighing Label</h4>
                        <table class="label-table">
                            <tr>
                                <td class="label-cell" colspan="2">Product: <span t-esc="doc.picking_id.product_id.name"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell" colspan="2">ID: <span t-esc="doc.picking_id.product_id.id"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell" colspan="2">Batch No: <span t-esc="doc.picking_id.lot_id.name"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell" colspan="2">Exp: <span t-esc="doc.picking_id.lot_id.expiration_date" t-options='{"widget": "date"}'/></td>
                            </tr>
                            <tr>
                                <td class="label-cell" colspan="2">Control No: <span t-esc="doc.picking_id.lot_id.name"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Actual: <span t-esc="doc.external_weight"/> <span t-esc="doc.external_unit"/></td>
                                <td class="label-cell">Theoretical: <span t-esc="doc.quantity"/> <span t-esc="doc.product_uom.name"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Dispenser:</td>
                                <td class="label-cell">IPC:</td>
                            </tr>
                            <tr>
                                <td class="label-cell" colspan="2">Date: <span t-esc="doc.picking_id.scheduled_date" t-options='{"widget": "date"}'/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">QAP-09-052</td>
                                <td class="label-cell">(1)of(1)</td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>
        <!-- CSS Styles -->
        <template id="report_stock_picking_styles" name="Stock Picking Label Styles">
            <style>
                @page {
                    size: 45mm 95mm;
                    margin: 1mm;
                }
                body {
                    font-family: Arial, sans-serif;
                    font-size: 10pt;
                    line-height: 1.2;
                }
                .label-container {
                    width: 43mm;
                    height: 93mm;
                    padding: 1mm;
                }
                .label-title {
                    font-size: 12pt;
                    text-align: center;
                    font-weight: bold;
                }
                .label-table {
                    width: 100%;
                    table-layout: fixed;
                    border-collapse: collapse;
                }
                .label-cell {
                    padding: 1mm 0;
                    vertical-align: top;
                }
                @media print {
                    .label-container {
                        page-break-inside: avoid;
                    }
                }
            </style>
        </template>

        <!-- Report Action -->
        <record id="action_report_stock_picking" model="ir.actions.report">
            <field name="name">Weighing Label</field>
            <field name="model">stock.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">stock_picking_report.report_stock_picking_template</field>
            <field name="paperformat_id" ref="paperformat_label_4_5_9_5"/>
        </record>
    </data>
</odoo>
