<odoo>
    <data>
        <!-- Define A7 Paper Format -->
        <record id="paperformat_a7" model="report.paperformat">
            <field name="name">A7</field>
            <field name="default" eval="False"/>
            <field name="format">A7</field>
            <field name="margin_top">3</field>
            <field name="margin_bottom">3</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
        </record>

        <!-- Report Template -->
        <template id="report_stock_picking_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <div style="font-size: 10px; line-height: 1.4; text-align: left;">
                        <h4 style="text-align: center;">Weighing Label</h4>
                        <p>Product: <span t-esc="doc.product_id.name"/></p>
                        <p>ID: <span t-esc="doc.product_id.id"/></p>
                        <p>Batch No: <span t-esc="doc.lot_ids.display_name"/></p>
                        <p>Item: <span t-esc="doc.product_id.name"/></p>
                        <p>ID: <span t-esc="doc.product_id.id"/></p>
                        <p>Exp: </p>
                        <p>Control No: </p>
                        <p>theoretical: </p>
                        <p>Actual:  <span t-esc="doc.external_weight"/> <span t-esc="doc.external_unit"/></p>
                        <p>Dispenser: </p>
                        <p>IPC: </p>
                        <p>Date:  <span t-field="doc.time_printing"/></p>
                    </div>
                </t>
            </t>
        </template>

        <!-- Report Action -->
        <record id="action_report_stock_picking" model="ir.actions.report">
            <field name="name">Stock Picking Report</field>
            <field name="model">stock.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">stock_picking_report.report_stock_picking_template</field>
            <field name="paperformat_id" ref="paperformat_a7"/>
        </record>
    </data>
</odoo>