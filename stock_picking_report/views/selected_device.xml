<odoo>
    <record id="view_device_selection_wizard" model="ir.ui.view">
        <field name="name">device.selection.wizard.form</field>
        <field name="model">device.selection.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Device to Fetch Weight">
                <group>
                    <field name="selected_device_id"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" type="object" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
