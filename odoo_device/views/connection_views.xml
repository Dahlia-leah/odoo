<odoo>
    <record id="view_x_device_connection_form" model="ir.ui.view">
        <field name="name">x.device.connection.form</field>
        <field name="model">x.device.connection</field>
        <field name="arch" type="xml">
            <form string="Device Connection">
                <sheet>
                    <group>
                        <field name="device_id" string="Device" required="1"/>
                        <field name="url" string="URL to Fetch JSON From" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_submit_url" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_x_device_connection_tree" model="ir.ui.view">
        <field name="name">x.device.connection.tree</field>
        <field name="model">x.device.connection</field>
        <field name="arch" type="xml">
            <tree string="Device Connections">
                <field name="device_id"/>
                <field name="url"/>
                <field name="connection_status"/>
            </tree>
        </field>
    </record>
</odoo>
