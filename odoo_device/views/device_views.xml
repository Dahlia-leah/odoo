<odoo>
    <!-- Define the action -->
    <record id="action_devices" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">device</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the first device.
            </p>
        </field>
    </record>

    <!-- Define the menuitems -->
    <menuitem id="menu_devices_root" name="Devices" sequence="10" parent="base.menu_settings"/>
    <menuitem id="menu_devices" name="Manage Devices" parent="menu_devices_root" action="action_devices"/>

    <!-- Define the views -->
    <record id="view_device_form" model="ir.ui.view">
        <field name="name">device.form</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <form string="Device">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="device_type"/>
                        <field name="serial_number"/>
                        <field name="purchase_date"/>
                        <field name="warranty_expiry"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_device_tree" model="ir.ui.view">
        <field name="name">device.tree</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <tree string="Devices">
                <field name="name"/>
                <field name="device_type"/>
                <field name="serial_number"/>
                <field name="purchase_date"/>
                <field name="warranty_expiry"/>
            </tree>
        </field>
    </record>
</odoo>
