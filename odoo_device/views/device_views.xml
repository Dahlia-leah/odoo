<odoo>
    <data>
        <!-- Form view for device connection -->
        <record id="view_x_device_connection_form" model="ir.ui.view">
            <field name="name">x.device.connection.form</field>
            <field name="model">x.device.connection</field>
            <field name="arch" type="xml">
                <form string="Device Connection">
                    <sheet>
                        <group>
                            <field name="device_id" string="Device" required="1"/>
                            <field name="url" string="URL to Fetch JSON From" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Form view for device -->
        <record id="view_x_device_form" model="ir.ui.view">
            <field name="name">x.device.form</field>
            <field name="model">x.device</field>
            <field name="arch" type="xml">
                <form string="Device">
                    <sheet>
                        <group>
                            <field name="name" string="Device Name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for device -->
        <record id="action_x_device" model="ir.actions.act_window">
            <field name="name">Devices</field>
            <field name="res_model">x.device</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Action for device connection -->
        <record id="action_x_device_connection" model="ir.actions.act_window">
            <field name="name">Device Connections</field>
            <field name="res_model">x.device.connection</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu items -->
        <menuitem id="menu_device_root" name="Device Management" sequence="10" app="true"/>
        <menuitem id="menu_x_device" name="Devices" parent="menu_device_root" sequence="10" action="action_x_device"/>
        <menuitem id="menu_x_device_connection" name="Connections" parent="menu_device_root" sequence="20" action="action_x_device_connection"/>
    </data>
</odoo>
