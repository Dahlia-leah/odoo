<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Action Definition -->
        <record id="action_devices" model="ir.actions.act_window">
            <field name="name">Devices</field>
            <field name="res_model">device</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create your first device record.
                </p>
            </field>
        </record>

        <!-- Menu Definition -->
        <menuitem id="menu_devices_root" 
                  name="Devices" 
                  sequence="10" 
                  web_icon="devices,static/description/icon.png" 
                  groups="base.group_user"/>

        <menuitem id="menu_devices_action" 
                  parent="menu_devices_root" 
                  action="action_devices" 
                  name="Manage Devices" 
                  sequence="1"/>

        <!-- Tree View for Device List -->
        <record id="view_device_tree" model="ir.ui.view">
            <field name="name">device.tree</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <tree string="Devices">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Device Details -->
        <record id="view_device_form" model="ir.ui.view">
            <field name="name">device.form</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <form string="Device Form">
                    <sheet>
                        <group>
                            <field name="name" string="Device Name" required="1"/>
                            <field name="status" readonly="1"/>
                            <field name="url" string="URL" required="1"/>
                            <field name="json_data" widget="text" string="JSON Data" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Device Parameters">
                                <field name="device_parameter_ids">
                                    <tree editable="bottom">
                                        <field name="parameter_name"/>
                                        <field name="parameter_value"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_submit_url" string="Submit" type="object" class="btn btn-primary"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Model for Device Parameters -->
        <record id="model_device_parameter" model="ir.model">
            <field name="name">device.parameter</field>
            <field name="model">device.parameter</field>
        </record>

        <!-- Security Groups -->
        <record id="group_device_manager" model="res.groups">
            <field name="name">Device Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
        </record>

        <record id="group_device_user" model="res.groups">
            <field name="name">Device User</field>
            <field name="category_id" ref="base.module_category_administration"/>
        </record>

    </data>
</odoo>
