<odoo>
    <data>
        <!-- Action Definition -->
        <record id="action_devices" model="ir.actions.act_window">
            <field name="name">Devices</field>
            <field name="res_model">device</field>
            <field name="view_mode">kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create your first device record.
                </p>
            </field>
        </record>

        <!-- Menu Definition -->
        <menuitem id="menu_devices_root" 
                  name="Devices" 
                  sequence="10" 
                  web_icon="devices,static/description/icon.png" 
                  groups="base.group_user"/>

        <menuitem id="menu_devices_action" 
                  parent="menu_devices_root" 
                  action="action_devices" 
                  name="Manage Devices" 
                  sequence="1"/>

        <!-- Kanban View -->
        <record id="view_device_kanban" model="ir.ui.view">
            <field name="name">device.kanban</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="status"/>
                    <field name="url"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>
                                    <span t-att-class="
                                        'badge ' + 
                                        (record.status.raw_value === 'active' ? 'badge-success' : 
                                         record.status.raw_value === 'out_of_service' ? 'badge-danger' : 'badge-secondary')">
                                        <field name="status"/>
                                    </span>
                                </div>
                                <div>
                                    <small><field name="url"/></small>
                                </div>
                                <div style="margin-top: 10px; display: flex; gap: 10px;">
                                    <button name="action_connect" 
                                            string="Connect" 
                                            type="object" 
                                            class="btn btn-primary"/>
                                    <button name="action_remove_device" 
                                            string="Delete" 
                                            type="object" 
                                            class="btn btn-danger"/>
                                </div>
                            </div>                 
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_device_form" model="ir.ui.view">
            <field name="name">device.form</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <form string="Manage Device">
                    <sheet>
                        <group>
                            <field name="name" string="Device Name" required="1"/>
                            <field name="url" string="URL" required="1"/>
                        </group>
                        <group>
                            <field name="status" readonly="1"/>
                            <field name="json_preview" string="JSON Preview" readonly="1" 
                                   widget="text" placeholder="JSON data will appear here after submission."/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_submit_url" string="Fetch JSON" type="object" class="btn btn-primary"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Security Groups -->
        <record id="group_device_manager" model="res.groups">
            <field name="name">Device Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
        </record>

        <record id="group_device_user" model="res.groups">
            <field name="name">Device User</field>
            <field name="category_id" ref="base.module_category_administration"/>
        </record>

        <!-- Access Rights -->
        <record id="device_access_manager" model="ir.model.access">
            <field name="name">device.access.manager</field>
            <field name="model_id" ref="model_device"/>
            <field name="group_id" ref="group_device_manager"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="device_access_user" model="ir.model.access">
            <field name="name">device.access.user</field>
            <field name="model_id" ref="model_device"/>
            <field name="group_id" ref="group_device_user"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>
