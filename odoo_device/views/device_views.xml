<odoo>
    <record id="view_device_form" model="ir.ui.view">
        <field name="name">device.form</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <form string="Device">
                <sheet>
                    <group>
                        <field name="name" string="Device Name" required="1"/>
                        <field name="url" string="Device URL" required="1"/>
                        <field name="status" string="Device Status" readonly="1"/>
                    </group>
                    <group>
                        <field name="json_data" string="Fetched JSON Data" readonly="1" widget="text"/>
                    </group>
                    <footer>
                        <button string="Submit URL" type="object" name="action_submit_url" class="btn btn-primary"/>
                        <button string="Remove Device" type="object" name="action_remove_device" class="btn btn-danger" 
                            attrs="{'invisible': [('id', '=', False)]}"/>
                        <button string="Close" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_device_tree" model="ir.ui.view">
        <field name="name">device.tree</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <tree string="Devices">
                <field name="name"/>
                <field name="status"/>
                <field name="url"/>
            </tree>
        </field>
    </record>

    <record id="action_device" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">device</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_device_tree"/>
    </record>

    <menuitem id="menu_device_root" name="Devices" sequence="10"/>
    <menuitem id="menu_device" name="Manage Devices" parent="menu_device_root" action="action_device"/>
</odoo>
