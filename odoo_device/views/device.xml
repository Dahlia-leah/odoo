<odoo>
    <data>

        <!-- Action to Display Devices -->
        <record id="action_device_list" model="ir.actions.act_window">
            <field name="name">Devices</field>
            <field name="res_model">device</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create your first device record.
                </p>
            </field>
        </record>

        <!-- Main Menu Item -->
        <menuitem id="menu_devices_root" 
                  name="Devices" 
                  sequence="10" 
                  web_icon="devices,static/description/icon.png" 
                  groups="base.group_user"/>

        <!-- Sub Menu Item for Managing Devices -->
        <menuitem id="menu_device_manage" 
                  parent="menu_devices_root" 
                  action="action_device_list" 
                  name="Manage Devices" 
                  sequence="1"/>

        <!-- Tree View for Device List -->
        <record id="view_device_tree" model="ir.ui.view">
            <field name="name">device.tree</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <tree string="Devices">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Device Details -->
        <record id="view_device_form" model="ir.ui.view">
            <field name="name">device.form</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <form string="Device Form">
                    <sheet>
                        <group>
                            <!-- Device Name Input -->
                            <field name="name" string="Device Name" required="1"/>
                            
                            <!-- Status Dropdown (Readonly) -->
                            <field name="status" readonly="1"/>
                            
                            <!-- URL Field for Fetching JSON -->
                            <field name="url" string="URL to fetch JSON from" required="1"/>
                            
                            <!-- JSON Data (Readonly) -->
                            <field name="json_data" widget="text" string="JSON Data" readonly="1"/>
                        </group>

                        <notebook>
                            <page string="Device Parameters">
                                <field name="device_parameter_ids">
                                    <tree editable="bottom">
                                        <field name="parameter_name"/>
                                        <field name="parameter_value"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <!-- Submit Button to Validate URL and Fetch Data -->
                        <button name="action_submit_url" string="Submit" type="object" class="btn btn-primary"/>
                        <!-- Cancel Button -->
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Security Groups (Optional, define who can access the Devices) -->
        <record id="group_device_manager" model="res.groups">
            <field name="name">Device Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
        </record>

        <record id="group_device_user" model="res.groups">
            <field name="name">Device User</field>
            <field name="category_id" ref="base.module_category_administration"/>
        </record>

        <!-- Access Control for Devices -->
        <record id="device_model_access" model="ir.model.access">
            <field name="name">device access</field>
            <field name="model_id" ref="model_device"/>
            <field name="group_id" ref="group_device_manager"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

    </data>
</odoo>
