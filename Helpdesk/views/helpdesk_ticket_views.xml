<odoo>
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
        <field name="arch" type="xml">
            <!-- Replace the user_id field with the assigned_user_id field -->
            <field name="user_id" position="replace">
                <field name="assigned_user_id" />
            </field>
            <!-- Add the member_ids field as invisible -->
             <xpath expr="//field[@name='member_ids']" position="replace">
               <field name="member_ids" widget="many2many_tags" options="{'no_create': True}" />
            </xpath>
            
        </field>
    </record>
</odoo>
